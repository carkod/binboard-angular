    "cross-env": "^5.0.5",
    "dotenv-safe": "^6.1.0",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest-cli": "^23.6.0",
    "mongodb-memory-server": "^2.9.0",
    "nock": "^10.0.4",
